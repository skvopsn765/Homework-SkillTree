@{
    ViewBag.Title = "Home Page";
}
@using (Html.BeginForm("Index", "Home",
    new { ReturnUrl = ViewBag.ReturnUrl },
    FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="well">
        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">類別</label>
            <div class="col-sm-10">
                @Html.DropDownList("category", (IEnumerable<SelectListItem>)ViewData["dr"], new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="money" class="col-sm-2 control-label">金額</label>
            <div class="col-sm-10">
                @Html.TextBox("money", null, new { placeholder = "金額", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
                @Html.TextBox("date", null, new { placeholder = "日期", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">備註</label>
            <div class="col-sm-10">
                @Html.TextArea("description", null, new { placeholder = "金額", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-10 col-sm-2">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    </div>
}
@Html.Partial("_ShowRecord")