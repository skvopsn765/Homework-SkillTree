@model IPagedList<Homework_SkillTree.Models.InputViewModel>
@{
    Layout = null;
}

@using X.PagedList;
@using X.PagedList.Mvc.Fluent

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(x => x.First().Category)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.First().Date)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.First().Money)
                </th>
            </tr>
            @{
                var i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>
                            @Html.DisplayFor(x => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Money)
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="col-md-12 text-center">
        @(Html.Pager(Model)
            .Url(page => Url.Action("SkillTree", new { page, ViewBag.Year, ViewBag.Month }))
            .Build())
    </div>
</div>